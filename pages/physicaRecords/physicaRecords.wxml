<swiper style='height:310rpx;' bindchange="changeJs" current='{{index}}'>
  <block wx:for="{{members}}" wx:key="{{item.id}}"  >
    <swiper-item id="{{item.id}}">
      <view class='head'>
        <view class='headImg'>
          <image src='{{item.img}}'/>
        </view>
        <view class='nickBox'>
          {{item.name}}
        </view>
        <view class='addBtn' bindtap='gotoAdd'>+</view>
        <view class='addBox' bindtap='gotoAdd'>   
          <text>添加</text>
        </view>
      </view>
    </swiper-item>
  </block>
</swiper> 
<view class='title'>
  基本信息
</view>
<view class='listBox'>
  <view>
    <text>就诊时间</text>{{date}}
    <picker mode="date" value="{{date}}" start="2015-09-01" end="2017-09-01" bindchange="bindDateChange">
    <view></view>
    </picker>
  </view>
  <view>
  <text>医院或体检中心</text>
  <input type='text' placeholder='请输入' value='{{yy}}' bindinput='changeYY'/>
  </view>
 
</view>
<view class='imgBox'>
  <view wx:for="{{imgs}}" wx:key="{{index}}">
    <image src='{{item}}'/>
    <text class='closeBtn' bindtap='removeImg' data-index="{{index}}"></text>
  </view>
  <view class='uploadBtn' bindtap='chooseImg'></view>
</view>
<view style='height:222rpx;'></view>
<view class='footer'>
  <button bindtap='submit'>保存</button>
</view>
