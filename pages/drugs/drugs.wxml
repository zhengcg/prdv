<view style='padding:40rpx 32rpx'>
<scroll-view scroll-y="true">
  <view id="panel" class="flex-column">
    <view class="flex-cell flex-row">
      <text class="flex-cell flex-row" style='font-size:24rpx;flex: 2!important'>时间</text>
      <text class="flex-cell flex-row" style='font-size:24rpx;flex: 3!important'>服用药品</text>
      <text class="flex-cell flex-row" style='font-size:24rpx;flex: 1!important'></text>
    </view>
   <view class="flex-row flex-cell" wx:for="{{list}}" wx:key="{{item.id}}">
      <text class="flex-cell flex-row" style='flex: 2!important'>{{item.do_time}}</text>
      <text class="flex-cell flex-row" style='flex: 3!important'>{{item.title}}</text>
      <text class="flex-cell flex-row trR" data-id="{{item.id}}" data-index="{{index}}" bindtap='removeFn' style='flex: 1!important'></text>
    </view>
  </view>
  </scroll-view>
</view>
