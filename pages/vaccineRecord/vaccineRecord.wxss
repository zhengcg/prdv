.list image{
  width: 84rpx;
  height: 84rpx;
}
.listBox{
  border-top: 1rpx solid #EAEDF3;
}
.list{
  border-bottom: 1rpx solid #EAEDF3;
  display: flex;
  align-items:center;
  width: 100%;
}
.list .dateTime{
  font-size: 28rpx;
  color: #111111;
  padding: 0 36rpx;
  width: 185rpx;
  box-sizing: border-box;
  vertical-align: middle;
}
.list .dateTime text{
  display: block;
}
.list .rigBox{
  border-left: 1rpx solid #EAEDF3;
   padding: 36rpx; 
