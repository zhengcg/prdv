}
.wdj .slider{
  position: absolute;
  left: 60rpx;
  top: 28rpx;
  right:0rpx;
}
.curTem{
  text-align: center;
  width: 622rpx;
  margin: 0 auto;
  font-size: 28rpx;
  position: relative
}
.curTem button{
  width: 150rpx;
  height: 56rpx;
  line-height: 56rpx;
  position: absolute;right: 0;
  background: #FF5B5B;
  border-radius: 8rpx;
  color: #fff;
  font-size: 28rpx;
  top: 0;
}
.curTem button::after{
  border: 0;
}


.container {
    height: 100%;
    overflow-y: hidden;
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
    -webkit-text-size-adjust:none;
    -webkit-user-select: none;
    font-size: 35rpx;
    color: #333;
    font-family: Helvetica,Arial,"Helvetica Neue","Droid Sans","Microsoft YaHei",sans-serif;
    margin-top: 40rpx;
}
.canvas {
    width: 100%;
    height: 200px;
}
.wt{
  height: 100rpx;
  margin: 40rpx 40rpx 0 40rpx;
  border-top: 1rpx solid #DCE2EE;
  border-bottom: 1rpx solid #DCE2EE;
  font-size: 32rpx;
  position: relative;
  color: #111;
  line-height: 100rpx;
}
.wt picker{
  float: left;
  margin-right: 20rpx;
}
.btnView{
  position: absolute;
  right: 0;
  height: 60rpx;
  top: 20rpx;
  display: flex;
  line-height: 60rpx;
}
.btnView .min,.btnView .add{
  width: 60rpx;
  height: 60rpx;
  box-sizing: border-box;
  background: #FFFFFF;
  border: 1rpx solid #FFC16A;
  border-radius: 8rpx;
  text-align: center;
  line-height: 60rpx;
  font-size: 36rpx;
}
.curNum{
  padding: 0 20rpx;
}
.dateView{
  padding: 10rpx 40rpx;
  font-size:32rpx;
  color: #111111;
  position: relative;
}
.dateView picker{
  float: left;
  margin-right: 10rpx;
}
.dateView button{
  background: #F39800;
border-radius: 8rpx;
height: 68rpx;
line-height: 68rpx;
width: 98rpx;
font-size: 28rpx;
color: #FFFFFF;
padding: 0;
position: absolute;
right: 40rpx;
 margin-top: -10rpx; 
}
.dateView button::after{
  border: 0;
}
.picker image{
  vertical-align: middle;
  width: 24rpx;
  height: 24rpx;
  margin-left: 15rpx;
}