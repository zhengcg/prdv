.imgBox{
  height: 500rpx;
  text-align: center;
}
.imgBox image{
  height: 500rpx;
}
.intro{
  padding: 0 40rpx;
}
.intro .introTit{
  font-size: 32rpx;
  color: #111111;
  line-height: 60rpx;
}
.intro .introCon{
  font-size: 28rpx;
  color: #666666;
  line-height: 40rpx;
}
.numBox{
  padding: 0 40rpx;
  height: 120rpx;
  line-height: 120rpx;
  border-top: 1rpx solid #E5E5E5;
  border-bottom: 1rpx solid #E5E5E5;
  margin-top: 20rpx;
}
.numBox text{
  font-size: 32rpx;
  color: #111111;
}
.numBox .num{
  float: right;
  width: 220rpx;
  display: flex;
  align-items:center;
  justify-content:space-between;
  color: #111;
  font-size: 32rpx;
}
.numBox .plus{
  box-sizing: border-box;
  border: 2rpx solid rgba(0,0,0,0.05);
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  line-height: 70rpx;
  text-align: center;
}
.numBox .minus{
  box-sizing: border-box;
  border: 2rpx solid rgba(0,0,0,0.05);
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  line-height: 70rpx;
  text-align: center;
}
.footer{
  height: 172rpx;
  width: 690rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  padding-left: 40rpx;
  padding-right: 20rpx;
  border-top: 1rpx solid #E5E5E5;
  display: flex;
  align-items:center;
  justify-content:space-between;
  background: #fff;
}
.footer .biNum view text{
  font-size: 36rpx;
  color: #111111;
  vertical-align: middle
}
.footer .biNum view image{
  vertical-align: middle;
  width: 48rpx;
  height: 48rpx;
  margin-right: 20rpx;

}
.footer .biNum>text{
  font-size: 28rpx;
  color: #FF5B5B;
  margin-top: 26rpx;
}
.duiBtn{
  background: #FF5B5B;
border-radius: 8rpx;
text-align: center;
font-size: 32rpx;
color: #FFFFFF;
width: 204rpx;
height: 84rpx;
line-height: 84rpx;
}
.addAdr{
  padding: 0 40rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  color: #18BAFF;
}

.listBox>view{
  display: flex;
  padding: 32rpx 20rpx;
  justify-content:space-between;
  align-items:center;
  border-bottom:1rpx solid #E5E5E5;
  color: #111;
}
.con{
  width: 470rpx;
  font-size: 28rpx;
}
.con .top{
  font-size: 32rpx;
  margin-bottom: 24rpx;
}
.con .top text{
  margin-left: 60rpx;
}
.cao{
  font-size: 32rpx;
  color: #F39800;

}

.shadeBox{
  position: fixed;
  width: 100%;
  height: 100%;
  z-index: 10000;
  background: #000;
  opacity: 0.3;
  left: 0;
  top: 0;bottom: 0;
}
.signBox{
  position: absolute;
  z-index: 100000;
  width: 544rpx;
  height: 700rpx;
  background: #fff;
  border-radius: 12px;
  left: 50%;
  margin-left: -272rpx;
  top: 50%;
  margin-top: -350rpx;
  overflow: auto;
}

