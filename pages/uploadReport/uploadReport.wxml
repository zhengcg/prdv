<view class='head'>
  <view class='headImg'>
    <image src='{{showMember.img}}'/>
  </view>
  <view class='nickBox'>
    {{showMember.name}}
  </view>
  <picker bindchange="bindPickerChange" value="{{index}}" range="{{membersArray}}" class='pickers'><view></view></picker>
  <view class='addBtn'>+</view>
  <view class='addBox'>   
    <text>添加</text>
  </view>
</view>

<view class='listBox'>
