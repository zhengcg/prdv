    <text>就诊时间</text>{{date}}
    <picker mode="date" value="{{date}}" start="2015-09-01" end="2017-09-01" bindchange="bindDateChange">
    <view></view>
    </picker>
  </view>
  <navigator url='/pages/jzyy/jzyy?jz_id={{jz_id}}&mid={{showMember.id}}'><text>就诊医院</text>{{jzyy.title}}</navigator>
  <navigator url='/pages/jzks/jzks?jz_id={{jz_id}}&mid={{showMember.id}}'><text>就诊科室</text>{{jzks.title}}</navigator>
</view>
